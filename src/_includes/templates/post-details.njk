<div class="post-details">
  <p>
    {% if author %}
      {% set page = search.page("type=author author='" + author + "'") %}
      {% if page %}
        By <a data-pagefind-filter="author" href="{{ page.data.url }}">{{ author }}</a> | 
      {% endif %}
    {% else %}
    By {{ author or site.author.name }} | 
    {% endif %}

    <time datetime="{{ date | date('DATETIME') }}">
      {{ date | date('HUMAN_DATE') }}
    </time>

    {% for tag in tags %}
      {% set page = search.page("type=tag tag='" + tag + "'") %}

      {% if page %}
        | <a data-pagefind-filter="filter" href="{{ page.data.url }}">{{ tag }}</a>
      {% endif %}
    {% endfor %}
  </p>
</div>
