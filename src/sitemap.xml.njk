<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{%- for page in search.pages() %}
  <url>
    <loc>{{ page.data.url | url(true) }}</loc>
    {% if page.data.date %}
      <lastmod>{{ page.data.date | date("DATE") }}</lastmod>
    {% endif %}
  </url>
{%- endfor %}
</urlset>
