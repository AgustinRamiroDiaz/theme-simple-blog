<ul class="postList">
  {% asyncEach post in postslist %}
  <li class="post">
    <h2 class="post-title">
      <a href="{{ post.data.url }}" {% if post.data.url == url %} aria-current="page"{% endif %}>
        {{ post.data.title or post.data.url }}</h2>
      </a>
    </h2>

    {% set date = post.data.date %}
    {% set tags = post.data.tags %}
    {% include "./post-details.njk" %}
  </li>
{% endeach %}
</ul>
