<div class="post-details">
  <time class="postList-date" datetime="{{ date | date('DATETIME') }}">
    {{ date | date('HUMAN_DATE') }}
  </time>

  {% for tag in tags %}
    {% set page = search.page("type=tag tag='" + tag + "'") %}

    {% if page %}
      | <a href="{{ page.data.url  }}" class="tag">{{ tag }}</a>
    {% endif %}
  {% endfor %}
</div>
